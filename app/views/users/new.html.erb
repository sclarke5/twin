<%= form_for @user do |f| %>
  <div class="field">
    <p><%= f.label :email %> </p>
    <p><%= f.text_field :email %></p>
  </div>

  <div class="field">
    <p><%= f.label :password %> </p>
    <p><%= f.text_field :password %></p>
  </div>

  <div class="field">
    <p><%= f.label :password_confirmation %> </p>
    <p><%= f.text_field :password_confirmation %></p>
  </div>

  <div class="field">
    <p><%= f.submit %> </p>
  </div>
<% end %>
