<h1><%=@product.name%></h1>
<ul>
  <li><%=@product.name%></li>
  <li><%=@product.description%></li>
  <li><%=@product.price_in_dollars%></li>
</ul>

<h2>Reviews</h2>
  <% @product.reviews.each do |r| %>
    <ul>
      <li><%= r.comment %></li>
      <li><%= r.created_at %></li>
    </ul>
  <% end %>

<%= render '/reviews/form' %>


<%= link_to("Home", products_path) %>

<%= link_to("Edit", edit_product_path(@product.id)) %>

<%= link_to("Delete", product_path, :method => :delete) %>
