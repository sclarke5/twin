<h1><%=@product.name%></h1>
<ul>
  <li><%=@product.name%></li>
  <li><%=@product.description%></li>
  <li><%=@product.price_in_dollars%></li>
</ul>

<h2>Reviews</h2>
  <% @product.reviews.each do |r| %>
    <ul>
      <li><%= r.comment %></li>
      <li><%= r.created_at %></li>
    </ul>
  <% end %>

<h4>New Review</h4>

<%= form_for([@product, @review]) do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% @review.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :comment %><br />
    <%= f.text_area :comment %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>




