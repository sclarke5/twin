<h1><%=@product.name%></h1>
<ul>
  <li><%=@product.name%></li>
  <li><%=@product.description%></li>
  <li><%=@product.price_in_dollars%></li>
</ul>

<h2>Reviews</h2>
  <% @product.reviews.each do |r| %>
    <ul>
      <li><%= r.comment %></li>
      <li><%= r.created_at %></li>
      <li><%= link_to('Edit Review') %></li>
    </ul>
  <% end %>

<%= render '/reviews/form' %>

<%= link_to("Home", products_path) %>

<%= link_to("Edit", edit_product_path(@product.id)) %>

<%= link_to("Delete Product", product_path, :method => :delete, data: {confirm: "Are you sure you want to delete this product: '#{ @product.name }' ?"}) %>
